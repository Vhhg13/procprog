#!/bin/bash

tst () {
    echo
    echo $1 ' | ' $2
    echo $1 | ./x1
    echo
}

# h R l r
# h R r
# π
tst '4 3 0' '(V=12π S=24π)'
#tst '4 3 5 0' '(V=12π S=24π)'

tst '4 6 3' '(V=84π S=90π)'
#tst '4 6 5 3' '(V=84π S=90π)'

tst '2 1 2.5' '(V=20.420334999999998 S=50.26544)'
#tst '2 1.5 2.5 0' '(V=1.5π S=6π)'

tst '4 6 8' '(V=619.9404266666666 S=510.85364632813986)'
#tst '4 6 5 8' '(Error r>R)'




tst '0 6 3' 'Невозможная фигура'
#tst '0 6 5 3' 'Невозможная фигура'

tst '4 0 0' 'Невозможная фигура'
#tst '4 0 5 0' 'Невозможная фигура'

tst '4 3 0' 'V=12π S=24π'
#tst '4 3 6 0' 'Невозможная фигура'

tst '4 11 8' 'V=1143.53876 S=879.6451999999999'
#tst '4 11 6 8' 'Невозможная фигура'


tst '-4 -3  0' '(V=12π S=24π)'
#tst '-4 -3 -5 0'

tst '-4 3 0' '(V=12π S=24π)'
#tst '-4 3 5 0'

tst '4 -3 0' '(V=12π S=24π)'
#tst '4 -3 5 0'

tst '4 -3  0' '(V=12π S=24π)'
#tst '4 -3 -5 0'

tst '4 -3 -0' '(V=12π S=24π)'
#tst '4 -3 5 -0'

